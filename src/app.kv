WindowManager:
    MainScreen:
    ResultsScreen:
    InfoScreen:


<MyButton@Button>:
    font_name: 'Tahoma'
    # font_size: 0.5 * self.height
    background_color: 0, 0, 0, 0
    size_hint: 0.11, 0.06
    canvas.before:
        Color:
            rgba: 0, 0, 0, 1
        RoundedRectangle:
            size: self.size
            pos: self.pos
            radius: [10] 


<Label>:
    halign: 'center'
    font_name: 'Tahoma'


<MySpinner>:
    background_color: 0, 0, 0, 1


<Screen>:
    canvas.before:
        Color:
            rgba: 0.188, 0.851, 0.396, 1
        Rectangle:
            pos: self.pos
            size: self.size

<ScreenManager>:
    canvas.before:
        
    canvas.before:
        Color:
            rgba: 0.188, 0.851, 0.396, 1
        Rectangle:
            pos: self.pos
            size: self.size



<MainScreen>:

    name: "main_screen"
    id: main_screen
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 30

        Label:
            text: "LOGO APLIKACJI"
            size_hint: 1 , 0.1

        FileInfo:
            id: file_info
            size_hint: 1, 0.1
            multiline: True
        
        FileChooserIconView:
            id: filechooser
            path: "data"
            size_hint_y: None
            height: 0.3*root.height
            font_name: 'Tahoma' 
            on_selection: main_screen.click_file(filechooser.selection)

        GridLayout:
            cols: 4
            rows: 1
            spacing: 20
            row_force_default: True
            row_default_height: 0.08*root.height
    
            Label:
                text: 'Kolumna dystansów [km]:'
            
            MySpinner:
                id: spinner_distance
            
            Label:
                text: 'Kolumna czasów [s]:'

            MySpinner:
                id: spinner_time
        
        GridLayout:
            cols:2
            rows: 1
            spacing: 100
            padding: 50
            row_force_default: True
            row_default_height: 0.05*root.height
            MyButton:
                id: go_info
                text: "Instrukcja"
                pos: 0.25 * root.width, 0.05 * root.height
                on_release:
                    root.manager.transition.direction = "right"
                    app.root.current = "info_screen"

            MyButton:
                id: go_results
                text: "Dalej"
                pos: 0.65 * root.width, 0.05 * root.height
                on_release:
                    root.manager.transition.direction = "left"
                    main_screen.go_results_action()


<ResultsScreen>:
    name: "results_screen"
    id: results_screen
    on_touch_move: root.update_input()
    on_touch_up: root.update_input()
    on_enter:  self.update_input()
    on_touch_up: root.show_predictions()
    
    FloatLayout:
        Label:
            text: "Dystans"
            size_hint: 0.1, 0.05
            pos: 0.1 * root.width, 0.8 * root.height

        # TextInput:
        #     id: distance_input
        #     text: 'Podaj dystans'
        #     padding_x: 0.15 * self.width
        #     multiline: False
        #     input_filter: 'float'
        #     on_focus: self.text = '' if args[1] else self.text
        #     size_hint: 0.15, 0.05
        #     pos: 0.3 * root.width, 0.8 * root.height
        #     background_color: 0, 0, 0, 1
        #     font_size: 0.5*self.height
        #     foreground_color: (1, 1, 1, 1)

        DistanceSlider:
            id: distance_slider
            value: 50
            step: 0.01
            orientation: 'horizontal'
            size_hint: 0.45, 0.05
            pos: 0.5 * root.width, 0.8 * root.height
            cursor_image: app.assets["runner_icon"]

        Label:
            id: distance_display
            text: f"{int(distance_slider.real_value)} m"
            pos: 0.3 * root.width, 0.8 * root.height
            size_hint: 0.15, 0.05
            background_color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

        Label:
            text: 'Zmiana masy'
            pos: 0.1 * root.width, 0.7 * root.height
            size_hint: 0.1, 0.05

        WeightSlider:
            id: weight_slider
            value: 50
            step: 1
            orientation: 'horizontal'
            size_hint: 0.45, 0.05
            pos: 0.5 * root.width, 0.7 * root.height
            cursor_image: app.assets["weight_icon"]
            

        Label:
            id: weight_display
            text: f"{weight_slider.real_value} %"
            pos: 0.3 * root.width, 0.7 * root.height
            size_hint: 0.15, 0.05
            background_color: 0, 0, 0, 1
            canvas.before:
                Color:
                    rgba: self.background_color
                Rectangle:
                    pos: self.pos
                    size: self.size

        MyButton:
            id: results_go_main
            text: "Powrót"
            pos: 0.45 * root.width, 0.05 * root.height
            on_release:
                root.manager.transition.direction = "right"
                app.root.current = "main_screen"
                

        BoxLayout:
            orientacion: "horizontal"
            size: (0.6 * root.width, 0.1 * root.height)
            size_hint: None, None
            pos: 0.2*root.width, 0.45*root.height

            Label:
                text: "Prognozowany czas:"
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

            Label:
                id: est_time
                text: "---"
                canvas.before:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        pos: self.pos
                        size: self.size

        GridLayout:
            cols: 1
            rows: 1
            size: (0.6 * root.width, 0.25 * root.height)
            size_hint: None, None
            pos: 0.2 * root.width, 0.2 * root.height
            # canvas.before:
            #     Color:
            #         rgba: 0, 0, 0, 0.3
            #     Rectangle:
            #         pos: self.pos
            #         size: self.size
            Label:
                id: result_warnings
                multiline: True
                text: "asd"        



<InfoScreen>:
    name: "info_screen"
    id: info_screen
    BoxLayout:
        orientation: 'vertical'
        padding: 50
        spacing: 50
        adaptive_height: True
        pos_hint: {'center_y':0.5}
        
        Label:
            text_size: self.size
            multiline: True
            markup: True
            text: "[u]Instrukcja[/u]\nPo wybraniu pliku csv można rozwinąć listę z nazwami kolumn i wybrać odpowiednie dla czasu i dystansu."

        AnchorLayout:
            anchor_x: 'center'
            anchor_y: 'bottom'
            MyButton:
                id: info_go_main
                text: "Powrót"
                size_hint: 0.25, 0.15
                on_release:
                    root.manager.transition.direction = "left"
                    app.root.current = "main_screen"
 